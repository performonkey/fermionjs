{
  "name": "fermionjs",
  "version": "2.1.1",
  "description": "javascript helpers",
  "main": "lib",
  "module": "src",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest --forceExit"
  },
  "author": "p10y",
  "license": "MIT",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "0.0.34",
    "@types/lodash": "^4.14.114",
    "ts-jest": "^20.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ]
  }
}
